# Ollama Primary
ADV_OLLAMA_BASE_URL=http://localhost:11434

# Model assignments per agent role
ADV_ATTACKER_MODEL=deepseek-r1:8b
ADV_ANALYZER_MODEL=mistral:7b
ADV_DEFENDER_MODEL=qwen3:8b
ADV_TARGET_MODEL=llama3:8b

# Optional Commercial Providers
# ADV_OPENAI_API_KEY=sk-...
# ADV_ANTHROPIC_API_KEY=sk-ant-...
# ADV_GOOGLE_API_KEY=AI...

# Database (Neon Serverless PostgreSQL)
# ADV_DATABASE_URL=postgresql+asyncpg://user:pass@ep-xxx.us-east-2.aws.neon.tech/adversarial_db?sslmode=require
# ADV_DATABASE_URL_DIRECT=postgresql+asyncpg://user:pass@ep-xxx.us-east-2.aws.neon.tech/adversarial_db?sslmode=require

# Redis
ADV_REDIS_URL=redis://localhost:6379/0

# Safety & Budget Limits
ADV_MAX_TURNS=20
ADV_MAX_COST_USD=100.0
ADV_DAILY_MAX_COST_USD=20.0
ADV_MAX_ERRORS=5

# Encryption
# Generate with: python -c "from adversarial_framework.utils.encryption import generate_master_key; print(generate_master_key())"
# ADV_ENCRYPTION_KEY=your-generated-key-here

# Application
ADV_ENVIRONMENT=development
ADV_API_HOST=0.0.0.0
ADV_API_PORT=8000
ADV_CORS_ORIGINS=["http://localhost:3000"]
ADV_LOG_LEVEL=INFO
ADV_LOG_JSON=false
